# ==================================================
# CONFIGURACOES DO BANCO DE DADOS (PostgreSQL obrigatorio)
# ==================================================
# OBRIGATORIO: URL do PostgreSQL (solicite ao admin)
# Formato: postgresql://usuario:senha@host:porta/database
DATABASE_URL=postgresql://postgres:SENHA@HOST:PORTA/railway

# ==================================================
# CONFIGURACOES DE AMBIENTE
# ==================================================
ENV=development
# Railway define automaticamente: RAILWAY_ENVIRONMENT=production

# ==================================================
# CONFIGURACOES DE AUTENTICACAO JWT
# ==================================================
# OBRIGATORIO EM PRODUCAO: Gere uma chave segura com:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=GERE_UMA_CHAVE_SEGURA_AQUI
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Credenciais do admin inicial (OBRIGATORIO EM PRODUCAO!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=DEFINA_SENHA_FORTE_AQUI

# Senha padrao para novos usuarios (devem trocar no primeiro login)
DEFAULT_USER_PASSWORD=mudar123

# ==================================================
# CONFIGURACOES DE CORS (Seguranca)
# ==================================================
# Lista de origens permitidas, separadas por virgula
# Em producao, SEMPRE defina as origens especificas do seu dominio
ALLOWED_ORIGINS=

# ==================================================
# CONFIGURACOES DO TJ-MS
# ==================================================
TJ_WSDL_URL=https://esaj.tjms.jus.br/mniws/servico-intercomunicacao-2.2.2/intercomunicacao?wsdl
# OBRIGATORIO: Credenciais do webservice TJ-MS
TJ_WS_USER=SEU_USUARIO_TJMS
TJ_WS_PASS=SUA_SENHA_TJMS

# ==================================================
# CONFIGURACOES DO GOOGLE GEMINI (IA)
# ==================================================
# OBRIGATORIO: Sua API key do Google Gemini
GEMINI_KEY=SUA_API_KEY_GEMINI

# ==================================================
# CONFIGURACOES DO OPENROUTER (IA - Legado)
# ==================================================
# Opcional: API key do OpenRouter (fallback)
OPENROUTER_API_KEY=SUA_API_KEY_OPENROUTER
OPENROUTER_MODEL=google/gemini-3-flash-preview
FULL_REPORT_MODEL=google/gemini-3-flash-preview

# ==================================================
# CONFIGURACOES DE LIMITACAO DE TAXA (RATE LIMITING)
# ==================================================
# Formato: <numero-de-requisicoes>/minute
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_LOGIN=10/minute
RATE_LIMIT_AI=15/minute
RATE_LIMIT_EXPORT=15/minute
RATE_LIMIT_HEAVY=15/minute # limite n√£o utilizado: TODO: implementar nas rotas mais pesadas
RATE_LIMIT_UPLOAD=15/minute