# ==================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ==================================================
DATABASE_URL=sqlite:///./portal.db
# Para PostgreSQL em produção:
# DATABASE_URL=postgresql://user:password@localhost:5432/portal_pge

# ==================================================
# CONFIGURAÇÕES DE AMBIENTE
# ==================================================
# Define o ambiente (development, production)
# Em produção, SECRET_KEY e ADMIN_PASSWORD são OBRIGATÓRIOS
ENV=development
# Railway define automaticamente: RAILWAY_ENVIRONMENT=production

# ==================================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO JWT
# ==================================================
# OBRIGATÓRIO EM PRODUÇÃO: Gere uma chave segura com:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=GERE_UMA_CHAVE_SEGURA_AQUI
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Credenciais do admin inicial (OBRIGATÓRIO EM PRODUÇÃO!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=DEFINA_SENHA_FORTE_AQUI

# Senha padrão para novos usuários (devem trocar no primeiro login)
DEFAULT_USER_PASSWORD=mudar123

# ==================================================
# CONFIGURAÇÕES DE CORS (Segurança)
# ==================================================
# Lista de origens permitidas, separadas por vírgula
# Em produção, SEMPRE defina as origens específicas do seu domínio
# Exemplo: ALLOWED_ORIGINS=https://portal.pge.ms.gov.br,https://admin.pge.ms.gov.br
ALLOWED_ORIGINS=

# ==================================================
# CONFIGURAÇÕES DO TJ-MS
# ==================================================
TJ_WSDL_URL=https://esaj.tjms.jus.br/mniws/servico-intercomunicacao-2.2.2/intercomunicacao?wsdl
# OBRIGATÓRIO: Credenciais do webservice TJ-MS
TJ_WS_USER=SEU_USUARIO_TJMS
TJ_WS_PASS=SUA_SENHA_TJMS

# ==================================================
# CONFIGURAÇÕES DO GOOGLE GEMINI (IA)
# ==================================================
# OBRIGATÓRIO: Sua API key do Google Gemini
GEMINI_KEY=SUA_API_KEY_GEMINI

# ==================================================
# CONFIGURAÇÕES DO OPENROUTER (IA - Legado)
# ==================================================
# Opcional: API key do OpenRouter (fallback)
OPENROUTER_API_KEY=SUA_API_KEY_OPENROUTER
OPENROUTER_MODEL=google/gemini-2.5-flash
FULL_REPORT_MODEL=google/gemini-2.5-flash
